@model NewsModel

@{
    ViewData["Title"] = "Modify new Article";
    List<SelectListItem> cathegories = ViewBag.Cathegories;
}

<div class="container">
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Title" class="control-label">Title</label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Lead" class="control-label">Lead</label>
        <input asp-for="@Model.Lead" class="form-control" />
        <span asp-validation-for="@Model.Lead" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Author" class="control-label">Author</label>
        <input asp-for="@Model.Author" class="form-control" />
        <span asp-validation-for="@Model.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Body" class="control-label">Content</label>
        <input asp-for="@Model.Body" class="form-control" />
        <span asp-validation-for="@Model.Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data" class="control-label">Date</label>
        <input asp-for="@Model.Data" class="form-control" />
        <span asp-validation-for="@Model.Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CathegoryID" class="control-label">Category Id</label>
            <select asp-for="@Model.CathegoryID" asp-items="@cathegories" class="form-control"></select>
        <span asp-validation-for="@Model.CathegoryID" class="text-danger"></span>
    </div>
    <br />
    <input type="hidden" asp-for="@Model.Id" />
    <input type="submit" value="Modify" />
    <br />
</form>
</div>