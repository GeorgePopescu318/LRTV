@using LRTV.ViewModels
@model PlayerModel

@{
    ViewData["Title"] = "Modify a player";
    List<SelectListItem> teams = ViewBag.Teams;
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nickname" class="control-label">InGame Name</label>
            <input asp-for="Nickname" class="form-control" />
            <span asp-validation-for="Nickname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label">Age</label>
            <input asp-for="Age" class="form-control" min="16" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TeamID" class="control-label">Current Team</label>
            <select asp-for="TeamID" asp-items="@teams" class="form-control"></select>
            <span asp-validation-for="TeamID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Achievements" class="control-label">Achievements</label>
            <input asp-for="Achievements" class="form-control" />
            <span asp-validation-for="Achievements" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label">Rating</label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Headshots" class="control-label">Headshot Percentage</label>
            <input asp-for="Headshots" class="form-control" />
            <span asp-validation-for="Headshots" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="KD" class="control-label">K/D</label>
            <input asp-for="KD" class="form-control" />
            <span asp-validation-for="KD" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MapsPlayed" class="control-label">Maps Played</label>
            <input asp-for="MapsPlayed" class="form-control"></input>
            <span asp-validation-for="MapsPlayed" class="text-danger"></span>
        </div>
        <!-- Hide the image field -->
        <div class="form-group" style="display: none;">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" type="file" class="form-control"></input>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <br />
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Edit" class="btn btn-link" />
        <br />
    </form>
</div>