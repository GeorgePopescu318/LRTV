@using LRTV.ViewModels
@model MatchesModel

@{
    ViewData["Title"] = "Modify a Match";
    List<SelectListItem> teams1 = ViewBag.Teams1;
    List<SelectListItem> teams2 = ViewBag.Teams2;
    List<SelectListItem> maps = ViewBag.Maps;
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Team1Id" class="control-label">Team1 Id</label>
            <select asp-for="@Model.Team1Id" asp-items="@teams1" class="form-control"></select>
            <span asp-validation-for="@Model.Team1Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Team2Id" class="control-label">Team2 Id</label>
            <select asp-for="@Model.Team2Id" asp-items="@teams2" class="form-control"></select>
            <span asp-validation-for="@Model.Team2Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DateTime" class="control-label">Date</label>
            <input asp-for="@Model.DateTime" class="form-control" min="2023-01-01T00:00" max="2030-01-01T00:00" />
            <span asp-validation-for="@Model.DateTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ScoreTeam1" class="control-label">Score @Model.Team1.Name</label>
            <input asp-for="@Model.ScoreTeam1" class="form-control"></input>
            <span asp-validation-for="@Model.ScoreTeam1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ScoreTeam2" class="control-label">Score @Model.Team2.Name</label>
            <input asp-for="@Model.ScoreTeam2" class="form-control"></input>
            <span asp-validation-for="@Model.ScoreTeam2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.MapId" class="control-label">Map Id</label>
            <select asp-for="@Model.MapId" asp-items="@maps" class="form-control"></select>
            <span asp-validation-for="@Model.MapId" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" value="Add" class="btn btn-link" />
        <br />
    </form>
</div>

