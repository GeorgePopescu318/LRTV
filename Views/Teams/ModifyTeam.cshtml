@model TeamModel

@{
    ViewData["Title"] = "Modify a player";
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Name" class="control-label">InGame Name</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Region" class="control-label">Age</label>
            <input asp-for="@Model.Region" class="form-control" />
            <span asp-validation-for="@Model.Region" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Ranking" class="control-label">Current Team</label>
            <input asp-for="@Model.Ranking" class="form-control" />
            <span asp-validation-for="@Model.Ranking" class="text-danger"></span>
        </div>
        <br />
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Edit" />
        <br />
    </form>
</div>